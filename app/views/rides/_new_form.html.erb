<%= form_for @ride do |f| %>
  <%= f.text_field :address, placeholder: "Where are you leaving from?", :class => "form-control"%><br>
  <%= f.text_field :destination, placeholder: "Where are you going?", :class => "form-control" %><br>
  <%= f.text_field :details, placeholder: "Ride details", :class => "form-control" %><br>
  <%= f.label "When do you want to leave?" %><br>
  <%= f.text_field :ride_time %><br><br>
  <%= f.submit :class => "btn btn-primary" %>
<% end %>

